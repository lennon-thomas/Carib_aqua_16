  journal = {Aquaculture International},
  author = {de Bezerra, Thales Ramon Q. and Domingues, Ernesto C. and Filho, Luiz Fl{\'a}vio A. Maia and Rombenso, Artur N. and Hamilton, Santiago and Cavalli, Ronaldo O.},
